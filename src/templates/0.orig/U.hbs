FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [{{{[../vector] U.dimensions}}}];

internalField   uniform $flowVelocity;

boundaryField
{
    //- Set patchGroups for constraint patches
    #includeEtc "caseDicts/setConstraintTypes"

    #include "include/fixedInlet"

    outlet
    {
        type            inletOutlet;
        inletValue      uniform ({{{[../vector] U.inletValue}}});
        value           $internalField;
    }

    bottomWall
    {
        type            fixedValue;
        value           $internalField;
    }

    {{{meshGroupName}}}
    {
        type            noSlip;
    }

    #include "include/frontBackUpperPatches"
}


